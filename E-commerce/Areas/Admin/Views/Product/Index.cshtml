@model List<Product>

@{
    const int quantity = 10;
}

<div class="container">
    <div class="row align-items-center my-4">
        <div class="col-md-6">
            <h2 class="fw-bold">All Products</h2>
        </div>
        <div class="col-md-6 text-md-end text-start">
            <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-success">
                + Create Product
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered align-middle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Category</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Price?.ToString("C")</td>
                            <td>
                                @if (item.Quantity > quantity)
                                {
                                    <span class="badge bg-primary">@item.Quantity</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@item.Quantity</span>
                                }
                            </td>
                            <td>@item.Catgory?.Name</td>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        Edit
                                    </a>
                                    </div>
                                    <div>
                                    <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-danger btn-sm btn-delete"
                                       data-id="@item.Id">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".btn-delete").forEach(button => {
            button.addEventListener("click", function (e) {
                e.preventDefault();
                const url = this.getAttribute("href");

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(url, { method: 'POST' })
                            .then(() => {
                                Swal.fire("Deleted!", "Product has been deleted.", "success")
                                    .then(() => location.reload());
                            });
                    }
                });
            });
        });
    });
</script>
